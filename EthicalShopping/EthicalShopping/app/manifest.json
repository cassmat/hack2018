{
  "name": "Ethicly",
  "version": "1.0",
  "description": "Conscious consumption through awarness",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "unlimitedStorage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "web_accessible_resources": [
    "data/company_data.json"
  ],
  "manifest_version": 2
}
